<?xml version="1.0" encoding="utf-8"?>
<WatchFace width="450" height="450">
    <Metadata key="CLOCK_TYPE" value="DIGITAL"/>
    <Scene>
        // ACTIVE DISPLAY
        // -----------------------------------------------------------------------------------------
        <Group name="Active" x="0" y="0" width="450" height="450">
            <Variant mode="AMBIENT" target="alpha" value="0"/>

            // Background
            <PartImage x="0" y="0"  width="450" height="450">
                <Image resource="bg_dots"/>
            </PartImage>
            // Mid Lines
            <PartImage x="0" y="60" width="450" height="450">
                <Image resource="mid_lines"/>
            </PartImage>

            // Battery Indicator
            // Indicator Background
            <PartDraw x="0" y="0" width="450" height="450">
                <RoundRectangle x="250" y="213" width="50" height="10" cornerRadiusX="5" cornerRadiusY="5">
                    <Fill color="#FF333333"/>
                </RoundRectangle>
            </PartDraw>
            // Indicator Fill
            <Condition>
                <Expressions>
                    <Expression name="Charging">[BATTERY_CHARGING_STATUS]</Expression>
                    <Expression name="Under_50">[BATTERY_PERCENT] &lt; 50</Expression>
                    <Expression name="Under_20">[BATTERY_PERCENT] &lt; 20</Expression>
                </Expressions>
                <Compare expression="Charging">
                    <PartDraw x="0" y="0" width="450" height="450">
                        <RoundRectangle x="253" y="216" width="44" height="4" cornerRadiusX="5" cornerRadiusY="5">
                            <Fill color="#FF00D400"/>
                            <Transform target="width" value="[BATTERY_PERCENT]*0.44"/>
                        </RoundRectangle>
                    </PartDraw>
                </Compare>
                <Compare expression="Under_20">
                    <PartDraw x="0" y="0" width="450" height="450">
                        <RoundRectangle x="253" y="216" width="44" height="4" cornerRadiusX="5" cornerRadiusY="5">
                            <Fill color="#FFD40000"/>
                            <Transform target="width" value="[BATTERY_PERCENT]*0.44"/>
                        </RoundRectangle>
                    </PartDraw>
                </Compare>
                <Compare expression="Under_50">
                    <PartDraw x="0" y="0" width="450" height="450">
                        <RoundRectangle x="253" y="216" width="44" height="4" cornerRadiusX="5" cornerRadiusY="5">
                            <Fill color="#FFD4D400"/>
                            <Transform target="width" value="[BATTERY_PERCENT]*0.44"/>
                        </RoundRectangle>
                    </PartDraw>
                </Compare>
                <Default>
                    <PartDraw x="0" y="0" width="450" height="450">
                        <RoundRectangle x="253" y="216" width="44" height="4" cornerRadiusX="5" cornerRadiusY="5">
                            <Fill color="#FFD4D4D4"/>
                            <Transform target="width" value="[BATTERY_PERCENT]*0.44"/>
                        </RoundRectangle>
                    </PartDraw>
                </Default>
            </Condition>

            // Battery Icon
            <PartDraw x="0" y="0" width="450" height="450">
                <Rectangle x="305" y="215.5" width="9" height="5">
                    <Fill color="#FFC0C0C0"/>
                </Rectangle>
                <Rectangle x="313" y="217" width="2.5" height="2">
                    <Fill color="#FFC0C0C0"/>
                </Rectangle>
            </PartDraw>

            // Index Behind
            <SecondHand resource="index" x="0" y="0" width="450" height="450">
                <Tick duration="0" strength="0"/>
                <Transform target="alpha" value="255 - [MILLISECOND]/1000*191"/>
            </SecondHand>
            // Index Forward
            <SecondHand resource="index2" x="0" y="0" width="450" height="450" alpha="64">
                <Tick duration="0" strength="0"/>
                <Transform target="alpha" value="64 + [MILLISECOND]/1000*191"/>
            </SecondHand>
            // Second Hand
            <SecondHand resource="hand_second" x="0" y="0" width="450" height="450">
                <Sweep frequency="SYNC_TO_DEVICE"/>
            </SecondHand>

            // Hour
            <Condition>
                <Expressions>
                    <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                </Expressions>
                <Compare expression="Is_24h">
                    <PartText x="50" y="110" width="220" height="220">
                        <Text>
                            <Font family="oswald_light" size="180" color="#FF111111" weight="BOLD">
                                <Template>%d<Parameter expression="[HOUR_0_23]"/></Template>
                            </Font>
                        </Text>
                    </PartText>
                </Compare>
                <Default>
                    <PartText x="50" y="110" width="220" height="220">
                        <Text>
                            <Font family="oswald_light" size="180" color="#FF111111" weight="BOLD">
                                <Template>%d<Parameter expression="[HOUR_1_12]"/></Template>
                            </Font>
                        </Text>
                    </PartText>
                </Default>
            </Condition>
            <Group name="HH" x="0" y="0" width="450" height="450">
                <Condition>
                    <Expressions>
                        <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                    </Expressions>
                    <Compare expression="Is_24h">
                        <PartText x="50" y="110" width="220" height="220" renderMode="MASK">
                            <Text>
                                <Font family="oswald_light" size="180" color="#FFFFFFFF" weight="BOLD">
                                    <Template>%d<Parameter expression="[HOUR_0_23]"/></Template>
                                </Font>
                            </Text>
                        </PartText>
                    </Compare>
                    <Default>
                        <PartText x="50" y="110" width="220" height="220" renderMode="MASK">
                            <Text>
                                <Font family="oswald_light" size="180" color="#FFFFFFFF" weight="BOLD">
                                    <Template>%d<Parameter expression="[HOUR_1_12]"/></Template>
                                </Font>
                            </Text>
                        </PartText>
                    </Default>
                </Condition>
                <HourHand resource="mask" x="0" y="0" width="450" height="450" tintColor="#FFFF6A6A"/>
            </Group>

            // Minute
            <PartText x="230" y="205" width="110" height="110">
                <Text>
                    <Font family="oswald_light" size="90" color="#FFD4D4D4">
                        <Template>%s<Parameter expression="[MINUTE_Z]"/></Template>
                    </Font>
                </Text>
            </PartText>

            // AM/PM
            <Condition>
                <Expressions>
                    <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                    <Expression name="Is_AM">[AMPM_STATE] == 0</Expression>
                </Expressions>
                <Compare expression="Is_24h"/>
                <Compare expression="Is_AM">
                    <PartText x="330" y="215" width="60" height="60">
                        <Text>
                            <Font family="roboto_light" size="40" color="#FFD4D4D4" weight="BOLD">AM</Font>
                        </Text>
                    </PartText>
                </Compare>
                <Default>
                    <PartText x="330" y="257" width="60" height="60">
                        <Text>
                            <Font family="roboto_light" size="40" color="#FFD4D4D4" weight="BOLD">PM</Font>
                        </Text>
                    </PartText>
                </Default>
            </Condition>

            // Date
            <PartText x="230" y="150" width="110" height="50">
                <Font family="roboto_light" size="24" color="#FFFFFFFF" weight="BOLD">
                    <Upper>
                        <Template>%s<Parameter expression="[DAY_OF_WEEK_S]"/></Template>
                    </Upper>
                </Font>
            </PartText>
            <PartText x="230" y="175" width="110" height="50">
                <Font family="roboto_light" size="24" color="#FFFFFFFF" weight="BOLD">
                    <Upper>
                        <Template>%s %s
                            <Parameter expression="[MONTH_S]"/>
                            <Parameter expression="[DAY_Z]"/>
                        </Template>
                    </Upper>
                </Font>
            </PartText>

            // Foreground
            <PartImage x="0" y="0"  width="450" height="450">
                <Image resource="mid_hole"/>
            </PartImage>

        </Group>

        // ALWAYS ON DISPLAY
        // -----------------------------------------------------------------------------------------
        <Group name="AOD" x="0" y="0" width="450" height="450" alpha="0">
            <Variant mode="AMBIENT" target="alpha" value="255"/>

            // Hour
            <Condition>
                <Expressions>
                    <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                </Expressions>
                <Compare expression="Is_24h">
                    <PartText x="50" y="110" width="220" height="220">
                        <Text>
                            <Font family="oswald_light" size="180" color="#00000000" weight="BOLD">
                                <Outline color="#FF333333" size="2">
                                    <Template>%d<Parameter expression="[HOUR_0_23]"/></Template>
                                </Outline>
                            </Font>
                        </Text>
                    </PartText>
                </Compare>
                <Default>
                    <PartText x="50" y="110" width="220" height="220">
                        <Text>
                            <Font family="oswald_light" size="180" color="#00000000" weight="BOLD">
                                <Outline color="#FF333333" size="2">
                                    <Template>%d<Parameter expression="[HOUR_1_12]"/></Template>
                                </Outline>
                            </Font>
                        </Text>
                    </PartText>
                </Default>
            </Condition>
            <Group name="HH_AOD" x="0" y="0" width="450" height="450">
                <Condition>
                    <Expressions>
                        <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                    </Expressions>
                    <Compare expression="Is_24h">
                        <PartText x="50" y="110" width="220" height="220" renderMode="MASK">
                            <Text>
                                <Font family="oswald_light" size="180" color="#00000000" weight="BOLD">
                                    <Outline color="#FFFFFFFF" size="2">
                                        <Template>%d<Parameter expression="[HOUR_0_23]"/></Template>
                                    </Outline>
                                </Font>
                            </Text>
                        </PartText>
                    </Compare>
                    <Default>
                        <PartText x="50" y="110" width="220" height="220" renderMode="MASK">
                            <Text>
                                <Font family="oswald_light" size="180" color="#00000000" weight="BOLD">
                                    <Outline color="#FFFFFFFF" size="2">
                                        <Template>%d<Parameter expression="[HOUR_1_12]"/></Template>
                                    </Outline>
                                </Font>
                            </Text>
                        </PartText>
                    </Default>
                </Condition>
                <HourHand resource="mask" x="0" y="0" width="450" height="450" tintColor="#FFFF6A6A"/>
            </Group>

            // Minute
            <PartText x="230" y="205" width="110" height="110">
                <Text>
                    <Font family="oswald_light" size="90" color="#00000000">
                        <Outline color="#FF888888" size="2">
                            <Template>%s<Parameter expression="[MINUTE_Z]"/></Template>
                        </Outline>
                    </Font>
                </Text>
            </PartText>

            // AM/PM
            <Condition>
                <Expressions>
                    <Expression name="Is_24h">[IS_24_HOUR_MODE]</Expression>
                    <Expression name="Is_AM">[AMPM_STATE] == 0</Expression>
                </Expressions>
                <Compare expression="Is_24h"/>
                <Compare expression="Is_AM">
                    <PartText x="330" y="215" width="60" height="60">
                        <Text>
                            <Font family="roboto_light" size="40" color="#FFD4D4D4" weight="LIGHT">AM</Font>
                        </Text>
                    </PartText>
                </Compare>
                <Default>
                    <PartText x="330" y="257" width="60" height="60">
                        <Text>
                            <Font family="roboto_light" size="40" color="#FFD4D4D4" weight="LIGHT">PM</Font>
                        </Text>
                    </PartText>
                </Default>
            </Condition>

            // Date
            <PartText x="230" y="150" width="110" height="50">
                <Font family="roboto_light" size="24" color="#FFD4D4D4" weight="LIGHT">
                    <Upper>
                        <Template>%s<Parameter expression="[DAY_OF_WEEK_S]"/></Template>
                    </Upper>
                </Font>
            </PartText>
            <PartText x="230" y="175" width="110" height="50">
                <Font family="roboto_light" size="24" color="#FFD4D4D4" weight="LIGHT">
                    <Upper>
                        <Template>%s %s
                            <Parameter expression="[MONTH_S]"/>
                            <Parameter expression="[DAY_Z]"/>
                        </Template>
                    </Upper>
                </Font>
            </PartText>

        </Group>
    </Scene>
</WatchFace>